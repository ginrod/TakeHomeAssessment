@page

@inject Configuration.ApiSettings ApiSettings

@model ContactsModel

@{
    ViewData["Title"] = "Contacts";
}

<div class="container mt-5" style="max-width: 900px">
    <h2>Search contacts in @Model.OfficeName</h2>

    <div class="row g-2 mb-3 align-items-center">
        <div class="col-sm-8">
            <input type="text" id="searchContactsInput"
                   class="form-control form-control-lg"
                   placeholder="Start typing to find contacts..."
                   data-api="@ApiSettings.BaseUrl"
                   data-office-id="@Model.OfficeId" />
        </div>
        <div class="col-sm-4">
            <div class="d-flex gap-2">
                <button class="btn btn-primary btn-lg flex-fill" onclick="searchContacts()">Search</button>
                <button class="btn btn-secondary btn-lg flex-fill" onclick="findAllContacts()">Find All</button>
            </div>
        </div>
    </div>

    <div id="errorMessage" style="color: red; margin-top: 1em;"></div>

    <div class="container">
        <div class="row justify-content-center">
            <div id="results" class="col-12"></div>
        </div>
    </div>

    <div id="paginationControls" style="display: none;" class="mt-3 text-center">
        <button class="btn btn-secondary me-2" onclick="previousPage()">Previous</button>
        <button class="btn btn-secondary" onclick="nextPage()">Next</button>

        <p class="mt-2">Page: <span id="pageIndicator"></span> of <span id="totalPages"></span></p>
    </div>

</div>

<script src="~/js/contacts.js"></script>
